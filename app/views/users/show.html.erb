<% provide(:title, @user.name.titleize) %>
<h1><%= @user.name.titleize %></h1>
<div class="row">
	<div class="span4 offset2">
		<%= gravatar_for @user, size: 100 %>
	</div>
	<div class="span6">
		<div>Name: <%= @user.name.titleize %></div>
		<div>Year: <%= @user.year %></div>
		<div>Position: <%= @user.position %></div>
		<div>Biography: <%=@user.bio %></div>
	</div>
</div>
